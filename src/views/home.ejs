<%- include('partials/head.ejs')%>
  <link rel="stylesheet" href="/css/style_home.css">
  <link rel="stylesheet" href="/css/style_menu_responsive.css">


  </head>

  <body>
    <!-- HEADER -->
    <%- include('partials/header.ejs')%>
      <!-- HEADER -->
      <%if(locals.user){%>
      <div class="logged">
        <h2>Bienvenido <%=locals.user.first_name %></h2>
      </div>
      <% } %> 
        <div>
          <div class="header-video">
              <video autoplay="autoplay" loop="loop" muted defaultMuted playsinline oncontextmenu="return false;" preload="auto"id="miVideo">
              <source src="/video/test1.mp4" type="video/mp4"> 
            </video>
            <div class="up-button">
              <p><a href="#categorias"><i>Conocé nuestros productos</i></a></p>
              <a href="#categorias"><i class="fas fa-chevron-down"></i></a>
            </div>
          </div>
        </div>  
      <section class="main-slider">
        <div class='slider'>
          <ul>
            <li><img src="/img/lamp1.jpg" alt=""></li>
            <li><img src="/img/colgantes3.jpg" alt=""></li>
            <li><img src="/img/lamp3.jpg" alt=""></li>
          </ul>
        </div>
      </section>

      <section class="banner">
        <div class="banner-box">
          <p class="banner-content"><i class="far fa-credit-card"></i> 3, 6 y 12 cuotas sin interés! A través de Mercado
            Pago</p>
        </div>
        <div class="banner-box">
          <p class="banner-content"><i class="fas fa-truck"></i> Envíos a todo el país gratis a partir de $10.000</p>
        </div>
        <div class="banner-box">
          <p class="banner-content"><i class="fas fa-money-bill-wave"></i> 20% descuento pagando con débito o
            transferencia</p>
        </div>
      </section>

      <main id="main-categori" class="main">
        <h2 id="titulo-mas-vendidos">SHOP</h2>
        <section id="categorias">
          <!--unifique las imagenes en una sola caja para mostrar mejor-->
          <div class="category-box">
            <%for(i=0; i < categoryList.length; i++) { %>
              <a href="/category/<%=categoryList[i].name+"/"+categoryList[i].id%>"><img class="zoom" src="<%=categoryList[i].imageHome%>"
                  alt="<%=categoryList[i].name%>">
                <div class="nombre">
                  <h2><%=categoryList[i].name%></h2>
                </div>
                </a>
              <%}%>
          </div>
          </div>
      </main>

      <section id="mas-vendidos">
        <h2 id="sale">SALE</h2>
        <div class="elementos">
            <%randomArray.forEach(element => {%>
              <div id="first-box" class="box">
                <img src="<%=products[element].images[0].name%>" alt="<%=products[element].name%>">
                <a href="/product/detail/<%=products[element].id%>">
                  <div class="capa">
                    <h2>
                      <%= products[element].name %> <br><br>
                        $<%= products[element].price %>
                    </h2>
                  </div>
                </a>
              </div>
              <%})%>
          </div>

      </section>
      <!-- FOOTER -->
      <%- include('partials/footer.ejs')%>
        <!-- FOOTER -->

  </body>

  </html>