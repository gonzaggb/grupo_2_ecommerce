                                    <br>
                                    <span>Cantidad: <input type="text" name="quantity"></span>
                                    <br>
                                    <span>Total: $1000</span>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="separador"></div>

                    <div id="item-eliminar">
                        <span><a href="#"><i class="far fa-trash-alt"></i></a></span>
                    </div>
                </div>
            </article>
            <% } %>
