<%- include('partials/head.ejs')%>
    <link rel="stylesheet" href="/css/styles-checkout.css">
    <title>Checkout | Focal Glow</title>

    </head>

    <body>
        <!-- HEADER -->
        <%- include('partials/header.ejs')%>
            <!-- HEADER -->

            <main class="checkout">
                <h2>DETALLE DEL PEDIDO</h2>
                <br>

                <section class="checkout-articles">
                    <% for (i=0; i < productCheckout.length; i++) { %>
                        <!-- PRODUCTO <%- i %> -->

                        <article class="checkout-product">
                            <div class="name-category">
                                <h3>
                                    <%= productCheckout[i].productName %>
                                </h3>

                            </div>

                            <div class="product-detail">
                                <div class="separador"></div>
                                <div class="img-detail">
                                    <div class="product-image">
                                        <img src="/img/<%=productCheckout[i].productImage%>">

                                    </div>
                                    <div class="detail">
                                        <div class="item-left">
                                            <div class="left-side">
                                                <span>
                                                    <%=features[i].CCT%>
                                                </span>
                                                <br>
                                                <span>
                                                    <%=features[i].DIM%>
                                                </span>
                                                <br>
                                                <span>
                                                    <%=features[i].OPTIC%>
                                                </span>
                                                <br>
                                                <span>
                                                    <%=features[i].POWER%>
                                                </span>
                                                <br>

                                            </div>
                                        </div>
                                        <div class="item-right">
                                            <div class="left-side">
                                                <span>Precio: $<%= productCheckout[i].productPrice %></span>
                                                <br>
                                                <span>Cantidad: <input type="text" name="quantity"
                                                        value="<%= productCheckout[i].quantity %>"></span>
                                                <br>
                                                <span>Total: $<%= productCheckout[i].subtotal %></span>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="separador"></div>

                                <div id="item-eliminar">
                                    <span><a href="#"><i class="far fa-trash-alt"></i></a></span>
                                </div>
                            </div>
                        </article>
                        <% } %>
                </section>
                <section class="total-checkout">
                    <div class="total-checkout-border">
                        <h1>CHECKOUT</h1>
                        <div class="separador"></div>


                        <span>Cantidad: <% let cantidad=0; for (i=0; i < productCheckout.length; i++) { %>
                                <% cantidad=cantidad + productCheckout[i].cantidad %>
                                    <% }%>
                                        <%=cantidad %> </span>
                        <br>
                        <span>Total:
                            <% let total=0; for (i=0; i < productCheckout.length; i++) { %>
                                <% total=total + productCheckout[i].cantidad * productCheckout[i].precio %>
                                    <% }%>
                                        <%=total %>
                        </span>
                        <br>
                        <div class="separador"></div>
                        <p>Revise bien todos los datos
                            antes de contfirmar la compra
                        </p>
                        <div class="separador"></div>
                        <button class="final-button">FINALIZAR</button>
                    </div>
                    <div>
                        <div class="similar-interests">
                            <h3>Productos que tambi√©n te pueden interesar</h3>
                            <section class="main-slider-mini">
                                <div class="slider-mini">
                                    <ul>
                                        <li><img src="/img/colgante.jpg" alt=""></li>
                                        <li><img src="/img/coral.jpg" alt=""></li>
                                        <li><img src="/img/delfina.jpg" alt=""></li>

                                    </ul>

                                </div>

                            </section>
                        </div>
                    </div>
                </section>
            </main>
            <!-- FOOTER -->
            <%- include('partials/footer.ejs')%>
                <!-- FOOTER -->
    </body>

    </html>