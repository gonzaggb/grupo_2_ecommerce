<%- include('../partials/head.ejs')%>
<link rel="stylesheet" href="/css/styles-product-org.css">
</head>
<body>
    <%- include('../partials/header.ejs')%>
    <main>
        <h2 class="titulo">Creación de Producto</h2>
       <div class="container-form"> 
        <form  id="register" action="/product/add" method="POST">
            <div class="first">
                <div class="cateogry-selector">
                    <label class="" for="categoria">Categoria: </label><br>
                    <select name="categoria" class="select">
                        <option value="">Seleccionar</option>
                        <option value="plafon">Plafón</option>
                        <option value="aplique">Aplique</option>
                        <option value="pie">Pie</option>
                        <option value="colgante">Colgante</option>
                        <option value="spot">Spot</option>
                        <option value="accesorios">Sistemas/Accesorios</option>
                        <option value="mesa">Mesa</option>
                        <option value="exterior">Exterior</option>
                    </select>
                </div>
            </div><br>
           <div class="first">
                <div class="in-line-data">
                    <label class="" for="producto">Nombre del Producto: </label><br>
                    <input class="box" type="text" name="producto" id="producto"  required>
             </div>
            </div><br>
            <div class="first">
                <div class="in-line-data">
                    <label class="" for="cantidad">Cantidad: </label><br>
                    <input class="box" type="number" name="cantidad" id="producto" min="0" required>
                </div>
            </div><br>
            <div class="first-">
                <label class="" for="fuente">Fuente: </label>
                
                <div>
                    <input class="radio" type="radio" name="fuente" value="led">LED Incorporado
                </div>
                <div>
                    <input class="radio" type="radio" name="fuente" value="Lampara">Lampara
                </div>   
            </div><br>
            <div >
                <div class="first-" >
                    <label class="" for="material">Material: </label>
                    <div>
                        <input class="check" type="checkbox" name="material" value="Aluminio"> Aluminio
                    </div>
                    <div>
                        <input class="check" type="checkbox" name="material" value="Madera"> Madera
                    </div>
                    <div>
                        <input class="check" type="checkbox" name="material" value="Chapa"> Chapa
                    </div>
                    <div>
                        <input class="check" type="checkbox" name="material" value="Hierro"> Hierro
                    </div>
                </div>    
                    <div class="in-line-data">
                        <label class="otros-materiales" for="otros-material">Otros materiales: </label><br>
                        <input class="box-1" type="text" name="material" id="otros-material" placeholder="Opcional" >
                    </div>
            </div><br>
            <div class="first-">
                <label class="" for="optica">Optica: </label>
                <div>
                    <input class="check" type="checkbox" name="optica" value="flood"> Flood
                </div>
                <div>
                    <input class="check" type="checkbox" name="optica" value="Spot"> Spot
                </div>
                <div>
                    <input class="check" type="checkbox" name="optica" value="WideFlood"> Wide Flood
                </div>
                <div>
                    <input class="check" type="checkbox" name="optica" value="Oval"> Oval
                </div>       
            </div><br>
            <div class="first-">
                <label for="potencia">Potencia: </label>
                <% for(j=1;j<=4;j++){ %>
                    <select name="potencia" class="select">
                        <option value="">Seleccionar</option>
                        <% for(i=1;i<=100;i++){ %>
                            <option value="<%=[i]%>W"><%=[i]%>W</option>
                        <%}%>
                    </select>
                    <%}%>
            </div><br>
            <div class="first-">
                <label class="" for="cct">CCT: </label>
                <div>
                    <input class="check" type="checkbox" name="cct" value="2700k"> 2700K
                </div>
                <div>
                    <input class="check" type="checkbox" name="cct" value="3000k"> 3000K
                </div>
                <div>
                    <input class="check" type="checkbox" name="cct" value="3500k"> 3500K
                </div>
                <div>
                    <input class="check" type="checkbox" name="cct" value="4000k"> 4000K
                </div>
            </div><br>
            <div class="first-">
                <label class="" for="dim">Dim: </label>
                <div>
                    <input class="check" type="checkbox" name="dim" value="switch"> Switch
                </div>
                <div>
                    <input class="check" type="checkbox" name="dim" value="dimeable"> Dimeable
                </div>
                <div>
                    <input class="check" type="checkbox" name="dim" value="dali"> DALI
                </div>
                <div>
                    <input class="check" type="checkbox" name="dim" value="bluetooth"> Bluetooth
                </div>
            </div><br>
            <div class="first-">
                <label class="" for="precio">Precio unitario base: </label><br>
                <input class="box" type="number" name="precio" id="precio"  min="0" max="999999999999" step="0.01" placeholder=" Ej 1525.35" required>
            </div><br>
         <div class="imagenes">   
            <div class="imagen-input">
                <label class="title" for="file">Imagen Principal: </label><br>
                <input type="file" accept=".jpg">
            </div><br>
            <div class="imagen-input">
                <label class="title" for="file">Dimensiones del Producto: </label><br>
                <input type="file" name="file" accept=".jpg">
            </div><br>
         </div>  
         <div class="imagenes">
            <div class="imagen-input">
                <label class="title" for="file">Imagen 2: </label><br>
                <input type="file"  name="file" accept=".jpg">
            </div><br>
            <div class="imagen-input">
                <label class="title" for="file">Imagen 3: </label><br>
                <input type="file" name="file" accept=".jpg">
            </div><br>
         </div> 
        <div class="imagenes">
            <div class="imagen-input">
                <label class="" for="hoja-tecnica">Hoja Técnica: </label><br>
                <input type="file" src="" alt="" name="file" accept=".pdf">
            </div><br>
            <div class="imagen-input">
                <label class="" for="manual-instalacion">Manual de Instalación: </label><br>
                <input type="file" src="" alt="" name="file" accept=".pdf">
            </div><br>
        </div>  
            <div class="button-container">
            <button id="button-enviar" type="submit">Agregar Producto</button>
            <button id="button-borrar" type="reset">Resetear</button>
            </div>
        </form>
    </div>
    </main>
    <%- include('../partials/footer.ejs')%>
</body>