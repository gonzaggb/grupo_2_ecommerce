            <div class="first-">
                <label class="" for="cct">CCT: </label>
                <div>
                    <input class="check" type="checkbox" name="cct" value="2700k"> 2700k
                </div>
                <div>
                    <input class="check" type="checkbox" name="cct" value="3000k"> 3000k
                </div>
                <div>
                    <input class="check" type="checkbox" name="cct" value="3500k"> 3500k
                </div>
                <div>
                    <input class="check" type="checkbox" name="cct" value="4000k"> 4000k
