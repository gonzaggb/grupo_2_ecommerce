<%- include ('../partials/head', {title:productFound.producto}) %>
      <link rel="stylesheet" href="/css/style-product-detail.css" />
  </head>

  <body>
    <!--HEADER-->
    <%- include ('../partials/header')%>

    <div class="product-name">
      <h2><%=productFound.producto%></h2>
      <a href="#" onclick="history.go(-1)"><i id="x" class="fas fa-arrow-circle-left"></i>
      </a>
    </div>

    <main>
      <div class="product-detail">
        <div class="main-img">
          <img src="<%=productFound.image%>" alt="luminaria" />
        </div>
        <i class="fas fa-ruler"></i>

        <div class="product-dimensions">
          <img src="/img/product_dimensions.jpg" alt="dimensiones luminaria" />
        </div>

        <div class="slider-container">
          <div class="slides">
            <input type="radio" name="r" id="r1" checked />
            <input type="radio" name="r" id="r2" />
            <input type="radio" name="r" id="r3" />
            <input type="radio" name="r" id="rp" />
            <input type="radio" name="r" id="rn" />

            <div class="slide s1">
              <img src="/img/slider_1.jpg" alt="" />
            </div>
            <div class="slide">
              <img src="/img/slider_2.jpg" alt="" />
            </div>
            <div class="slide">
              <img src="/img/slider_3.jpg" alt="" />
            </div>
          </div>

          <!-- Next and previous buttons -->
          <label for="rp" class="prev">&#10094;</label>
          <label for="rn" class="next">&#10095;</label>

          <!-- Slider buttons -->
          <div class="dots-container">
            <label for="r1" class="dot"></label>
            <label for="r2" class="dot"></label>
            <label for="r3" class="dot"></label>
          </div>
        </div>
      </div>

      <div class="product-info">
        <section class="technical-info">
          <div class="options">
            <div class="options-power-cct">
              <select name="power" class="options-control">
               <%productFound.potencia.forEach(function (element) { 
                if (element != ""){%>
                  <option value="<%=element%>"><%=element%>W</option>
                <% }}) %>
              </select>
              <select name="cct" class="options-control">
                <%productFound.cct.forEach(function (element) { 
                  if (element != "") {%>
                <option value="<%=element%>"><%=element.toUpperCase()%></option>
                <% }}) %>
              
              </select>
            </div>

            <select name="dim" class="options-control-dim">
              <%productFound.dim.forEach(function (element) { 
                switch (element) {
                  case '':
                    break
                  case 'Switch':%>
                    <option value="<%=element%>">&#xf011; <%=element%></option>
                  <%  break
                  case 'Bluetooth': %>
                  <option value="<%=element%>">&#xf293; <%=element%></option>
                  <% break
                  default:%>
                  <option value="<%=element%>"><%=element%></option>
                  <%  break;
                
                 }}) %>

            
            </select>
          </div>

          <article class="technical-data">
            <h3>Características</h3>
            <ul>
              <li>Fuente: <%=(productFound.fuente).toUpperCase()%></li>
              <li>Material:  <%=productFound.material.join('-')%></li>
              <li>Óptica: <%=productFound.optica%></li>
              <li>Potencia [W]: <em>Seleccionar opción</em></li>
              <li>CCT: <em>Seleccionar opción</em></li>
              <li>Dim: <em>Seleccionar opción</em></li>
            </ul>
          </article>
        </section>

        <section class="price">
          <h3 class="price-title">$<%= productFound.precio%></h3>
          <div class="qtyadd">
            <input type="number" placeholder="1" min="0" />
            <button class="add">AÑADIR</button>
          </div>
        </section>

        <div class="product-dimensions-info">
          <img src="/img/product_dimensions.jpg" alt="dimensiones luminaria" />
          <span>Dimensiones</span>
        </div>

        <section class="documents">
          <span><i class="far fa-file-pdf"></i> Hoja Técnica</span>
          <span><i class="far fa-file-pdf"></i> Manual de Instalación</span>
        </section>
      </div>
    </main>

    <section class="similar-products-container">
      <article class="similar-products">
        <h3>Productos Similares</h3>
        <div class="slider-container-2">
          <div class="slides-2">
            <input type="radio" name="r" id="r1-2" checked />
            <input type="radio" name="r" id="r2-2" />
            <input type="radio" name="r" id="r3-2" />
            <input type="radio" name="r" id="rp-2" />
            <input type="radio" name="r" id="rn-2" />

            <div class="slide s2">
              <img src="/img/similar_products_1.jpg" alt="" />
            </div>
            <div class="slide-2">
              <img src="/img/similar_products_2.jpg" alt="" />
            </div>
            <div class="slide-2">
              <img src="/img/similar_products_3.jpg" alt="" />
            </div>
          </div>

          <!-- Next and previous buttons -->
          <div class="prev-next-buttons-2">
            <label for="rp-2" class="prev">&#10094;</label>
            <label for="rn-2" class="next">&#10095;</label>
          </div>

          <!-- Slider buttons -->
          <div class="dots-container-2">
            <label for="r1-2" class="dot"></label>
            <label for="r2-2" class="dot"></label>
            <label for="r3-2" class="dot"></label>
          </div>
        </div>
      </article>
    </section>

    <!--FOOTER-->
    <%- include('../partials/footer') %>
  </body>
</html>
