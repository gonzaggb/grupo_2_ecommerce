<%- include ('../partials/head')%>
    <body>
        <%- include('../partials/header.ejs')%>
        <form action="/product/search/" method="get">
            <input type="search" name="keyword" id="">
            <button type="submit">Enviar</button>
        </form>

       
        <% productFound.forEach(element=> {%>
            <article class="producto">
                <a href="/product/detail/<%=element.id%>"><img class="zoom" src="<%=element.main_image%>" alt=""></a>
                <div class="nombre-precio">
                    <p class="nombre">Nombre del producto: <%=element.name%>
                    </p>
                    <p class="precio">Desde: <%=element.price%>
                    </p>
                </div>
            </article>
            <%}) %>
        <%- include('../partials/footer.ejs')%>
    </body>