    <title>Registro | Focal Glow</title>
    <link rel="stylesheet" href="/css/styles-registro.css">

    </head>
    <script>function cambiar() {
            var pdrs = document.getElementById('file-upload').files[0].name;
            document.getElementById('info').innerHTML = pdrs;
        }</script>

    <body>
        <%- include('../partials/header.ejs')%>


            <main class="main-container2">
                <form class="registry-form2" method="POST" action="/users/registro" enctype="multipart/form-data">
                    <div class="registry-container2">
                        <label for="nombre">Nombre</label>
                        <input class="<%=locals.errors && errors.name ? 'error' : 'input-login'%>" type="text"
                            name="name" id="name" <% if (locals.errors && errors.name) { %>
                            placeholder="<%=errors.name.msg%>"
                            <% }else if(locals.oldData){ %>
                                value = "<%=oldData.name%>"
                                    <%}%>>
                        <label for="apellido">Apellido</label>
                            <input class="<%=locals.errors && errors.surname ? 'error' : 'input-login'%>"
                                            type="text" name="surname" id="surname" <% if (locals.errors &&
                                            errors.surname) { %>
                                        placeholder="<%=errors.surname.msg%>"
                                            <% }else if(locals.oldData){ %>
                                                value = "<%=oldData.surname%>"
                                                    <%}%>>
                            <label for="email">Email</label>
                                <input class="<%=locals.errors && errors.email ? 'error' : 'input-login'%>"
                                                            type="text" name="email" id="email" <% if (locals.errors &&
                                                            errors.email) { %>
                                                        placeholder="<%=errors.email.msg%>"
                                                            <% }else if(locals.oldData){ %>
                                                                value = "<%=oldData.email%>"
                                                                    <%}%>>
                            <label for="password">Contraseña</label>
                                <input class="<%=locals.errors && errors.password ? 'error' : 'input-login'%>"
                                         type="password" name="password" id="password"
                                    <% if (locals.errors && errors.password) { %>
                                     placeholder="<%=errors.password.msg%>"
                                         <%}%>>
                            <label for="rePassword">Confirmar contraseña</label>
                                <input class="<%=locals.errors && errors.rePassword ? 'error' : 'input-login'%>"
                                     type="password" name="rePassword" id="rePassword"
                                     <% if (locals.errors && errors.rePassword) { %>
                                 placeholder="<%=errors.rePassword.msg%>"
                                     <%}%>>
                                        <label for="file-upload" class="subir">
                                            <span><i class="far fa-user-circle"></i>
                                                Subir foto de perfil</span>
                                        </label>
                                        <%if(locals.errors && errors.profileImg){%>
                                            <span class="error-message"><%=errors.profileImg.msg%></span>
                                            <%}%>
                                        <div id="info"></div>
                                        <input id="file-upload" name="profileImg" onchange='cambiar()' type="file" style='display: none;'/>
                    <div class="button-container">
                        <button type="submit" class="login-button">Continuar</button>
                    </div>

                    </section>
                </form>

