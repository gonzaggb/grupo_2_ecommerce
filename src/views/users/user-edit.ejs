<!-- Partial head -->
<%- include('../partials/head.ejs')%>

    <title>Login | Focal Glow</title>


    </head>

    <body>
        <%- include('../partials/header.ejs')%>
        <form class="registry-form2" method="POST" action="/users/<%=userToEdit.id%>/edit?_method=PUT">

            <div class="registry-container2">
                <label for="id">ID</label>
                <input class="input-login" type="text" name="id" id="id" value="<%=userToEdit.id%>" required>
                <label for="nombre">Nombre</label>
                <input class="input-login" type="text" name="nombre" id="nombre" value="<%=userToEdit.nombre%>" required>
                <label for="apellido">Apellido</label>
                <input class="input-login" type="text" name="apellido" id="apellido" value="<%=userToEdit.apellido%>" required>
                <label for="email">Email</label>
                <input class="input-login" type="email" name="email" id="email" value="<%=userToEdit.email%>" required>
                <label for="password">Contrase√±a</label>
                <input class="input-login" type="password" name="password" id="password" value="<%=userToEdit.password%>" required>

            </div>
            <div class="button-container">
                <button type="submit" class="edit-button">Editar</button>

            </div>
            </section>
        </form>
        <form action="/users/<%=userToEdit.id%>?_method=DELETE" method="POST">
            <button type="submit"><i class="far fa-trash-alt"></i></button>
        </form>
    </body>

    </html>